    "test": "export NODE_TLS_REJECT_UNAUTHORIZED=0 && jest",
    "format": "prettier --single-quote --write test-suites/*"
  },
  "dependencies": {
    "dotenv": "6.1.0",
    "jest": "22.4.4",
    "lodash": "4.17.11",
    "superagent": "3.8.3"
  },
  "devDependencies": {
    "eslint": "5.9.0",
    "prettier": "1.15.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off"
    }
  }
}
