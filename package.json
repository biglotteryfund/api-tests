{
  "name": "api-tests",
  "version": "1.0.0",
  "description": "API tests",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "format": "prettier --single-quote --write test-suites/*"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "lodash": "^4.17.15",
    "prettier": "^1.19.1",
    "superagent": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "no-shadow": "warn",
      "no-console": "off"
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
